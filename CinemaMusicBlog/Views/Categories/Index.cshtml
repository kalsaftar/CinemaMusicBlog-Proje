@model IEnumerable<CinemaMusicBlog.Models.Category>

@{
    ViewData["Title"] = "Kategoriler";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Kategoriler</h2>
        <a asp-action="Create" class="btn btn-primary">Yeni Kategori Ekle</a>
    </div>

    <table class="table table-hover shadow-sm" style="border-radius: 10px; overflow: hidden;">
        <thead class="table-dark">
            <tr>
                <th>Kategori Adı</th>
                <th class="text-end">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle fw-bold">@item.Name</td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>