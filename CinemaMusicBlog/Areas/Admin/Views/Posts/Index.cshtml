@model IEnumerable<CinemaMusicBlog.Models.Post>

@{
    ViewData["Title"] = "Blog Arşivi";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1 class="display-6 fw-bold text-white">
            <i class="bi bi-archive-fill me-2" style="color: var(--neon-blue);"></i>Blog Arşivi
        </h1>

        @if (User.Identity.IsAuthenticated)
        {
            <a asp-action="Create" class="btn btn-neon shadow-lg">
                <i class="bi bi-plus-lg me-1"></i> Yeni Yazı Ekle
            </a>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center text-white-50 py-5">
            <i class="bi bi-journal-x fs-1 opacity-50"></i>
            <p class="fs-4 mt-3">Henüz arşivde hiç yazı yok.</p>
            @if (User.Identity.IsAuthenticated)
            {
                <p>İlk yazıyı sen ekle!</p>
            }
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <article class="card h-100 modern-card border-0 shadow-sm transition-hover">

                        <div class="position-relative overflow-hidden" style="border-radius: 12px 12px 0 0;">
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <a asp-action="Details" asp-route-id="@item.Id">
                                    <img src="~/images/@item.ImageUrl" class="card-img-top"
                                         style="width: 100%; aspect-ratio: 16/9; object-fit: cover;"
                                         alt="@item.Title">
                                </a>
                            }
                            else
                            {
                                <div class="bg-secondary bg-opacity-25 d-flex align-items-center justify-content-center" style="width: 100%; aspect-ratio: 16/9;">
                                    <i class="bi bi-image text-white-50 fs-1"></i>
                                </div>
                            }

                            <a asp-action="ByCategory" asp-route-id="@item.CategoryId"
                               class="badge position-absolute top-0 end-0 m-2 text-decoration-none shadow-lg rounded-pill px-3 py-2"
                               style="background-color: @(item.Category?.Name == "Sinema" ? "var(--neon-red)" : "var(--neon-blue)"); z-index: 10;">
                                @item.Category?.Name
                            </a>
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold text-white mb-3">
                                <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-white stretched-link">
                                    @item.Title
                                </a>
                            </h5>

                            <p class="card-text small opacity-75 text-white-50 flex-grow-1"
                               style="display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden;">
                                @item.Content
                            </p>

                            <div class="d-flex justify-content-between align-items-center mt-3 pt-3 border-top border-secondary border-opacity-25">
                                <small class="text-white-50">
                                    <i class="bi bi-calendar3 me-1"></i> @item.CreatedDate.ToString("dd.MM.yyyy")
                                </small>

                                @if (User.Identity.IsAuthenticated)
                                {
                                    <div style="z-index: 20; position: relative;">
                                        <a asp-area="Admin"
                                           asp-controller="Posts"
                                           asp-action="Edit"
                                           asp-route-id="@item.Id"
                                           class="text-warning me-2 text-decoration-none"
                                           title="Düzenle"><i class="bi bi-pencil-square"></i></a>

                                        <a asp-area="Admin"
                                           asp-controller="Posts"
                                           asp-action="Delete"
                                           asp-route-id="@item.Id"
                                           class="text-danger text-decoration-none"
                                           title="Sil"><i class="bi bi-trash"></i></a>
                                    </div>
                                }
                            </div>
                        </div>

                    </article>
                </div>
            }
        </div>
    }
</div>